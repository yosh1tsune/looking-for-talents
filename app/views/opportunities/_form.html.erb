<% if @opportunity.errors.any? %>
  <p>VocÃª deve corrigir os seguintes erros: </p>
  <ul>
  <% @opportunity.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul><br><br>
<% end %>

<div class="d-flex justify-content-center mt-4">
  <div class="col-md-4 card p-5">
    <%= form_with model: @opportunity, local: true do |form| %>
        <div class='form-group'>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.label :company_id %>
          <%= form.collection_select(:company_id, current_headhunter.linked_companies, :id, :name) %>
        </div>
        <div class='form-group'>
          <%= form.label :work_description %>
          <%= form.text_area :work_description, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.label :required_abilities %>
          <%= form.text_area :required_abilities, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.label :salary %>
          <%= form.text_field :salary, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.label :grade %>
          <%= form.text_field :grade, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.label :submit_end_date %>
          <%= form.date_field :submit_end_date, class: 'form-control' %>
        </div>
        <%= form.submit 'Enviar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>