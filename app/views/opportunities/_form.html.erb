<% if @opportunity.errors.any? %>
  <p>VocÃª deve corrigir os seguintes erros: </p>
  <ul>
  <% @opportunity.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul><br><br>
<% end %>

<div class='col-md-4'>
  <%= form_with model: @opportunity, local: true do |form| %>
      <div class='form-group'>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class='form-group'>
          <%= form.label :company %>
          <%= form.text_area :company, class: 'form-control' %>
      </div>
      <div class='form-group'>
          <%= form.label :work_description %>
          <%= form.text_area :work_description, class: 'form-control' %>
      </div>
      <div class='form-group'>
          <%= form.label :required_abilities %>
          <%= form.text_area :required_abilities, class: 'form-control' %>
      </div>
      <div class='form-group'>
          <%= form.label :salary %>
          <%= form.text_field :salary, class: 'form-control' %>
      </div>
      <div class='form-group'>
          <%= form.label :grade %>
          <%= form.text_field :grade, class: 'form-control' %>
      </div>
      <div class='form-group'>
          <%= form.label :submit_end_date %>
          <%= form.date_field :submit_end_date, class: 'form-control' %>
      </div>
      <%= form.fields_for :address do |address_form| %>
        <div class="form-group">
          <%= address_form.label :street %>
          <%= address_form.text_field :street, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= address_form.label :neighborhood %>
          <%= address_form.text_field :neighborhood, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= address_form.label :city %>
          <%= address_form.text_field :city, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= address_form.label :state %>
          <%= address_form.text_field :state, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= address_form.label :country %>
          <%= address_form.text_field :country, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= address_form.label :zipcode %>
          <%= address_form.text_field :zipcode, class: 'form-control' %>
        </div>
      <% end %>
      <%= form.submit 'Enviar', class: 'btn btn-primary' %>
  <% end %>
</div>