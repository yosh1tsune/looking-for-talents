<% if experience %>
  <% if experience.errors.blank? %>
    <dl>
      <dt><%= t('experiences.company') %>:</dt>
      <dd><%= experience.company %></dd>
      <dt><%= t('experiences.role') %>:</dt>
      <dd><%= experience.role %></dd>
      <dt><%= t('experiences.start_date') %>:</dt>
      <dd><%= l(experience.start_date) %></dd>
      <% if experience.currently_working == false %>
        <dt><%= t('experiences.end_date') %>:</dt>
        <dd><%= l(experience.end_date) %></dd>
      <% end %>
      <dt><%= t('experiences.resume') %>:</dt>
      <dd><%= experience.resume %></dd>
    </dl>
  <% end %>
<% end %>