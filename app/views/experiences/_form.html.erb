<% if @experience.errors.any? %>
  <p>Você deve corrigir os seguintes erros: </p>
  <ul>
  <% @experience.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul><br><br>
<% end %>

<h4>Cadastre uma experiência</h4>

<%= form_for ([@profile, @experience]) do |form| %>
    <div class="form-group">
        <%= form.label :company %>
        <%= form.text_field :company, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :role %>
        <%= form.text_field :role, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :start_date %>
        <%= form.date_field :start_date, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :end_date %>
        <%= form.date_field :end_date, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :currently_working %>
        <%= form.check_box :currently_working, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :resume %>
        <%= form.text_area :resume, class: 'form-control' %>
    </div>
    <%= form.submit 'Salvar', class: 'btn btn-success' %>
<% end %>